      foreach (remove-duplicates bf (DF:column mx df))
      [ x ->
       set categoria2 mx
       set aristaActual2 x
        
    set auxiliar1 (DF:filter-att DataFrame categoria2 aristaActual2)
    set auxiliar1 remove-item 0 auxiliar1
       
