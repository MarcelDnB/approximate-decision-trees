        set valores lput contar valores ; meto las cuentas en una lista y vamos a poder identificar los valores ya que tienen el mismo indice q varDiferentes
        set contar 0
      ]

      ;Creamos una hoja con los porcentajes
      hatch-ID3:nodes 1[
      set ID3:node-type 2
      let final ""
